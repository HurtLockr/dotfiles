/* {{{ bar/top */
[bar/top]
; dimensions for the bar
width = 1920
height = 30

; center
fixed-center = false

; offset
offset-x = 0
offset-y = 0

; corners
radius = 0

; location
override-redirect = false
wm-restack = i3

; background and foreground
background = ${env:POLYBAR_BACKGROUND}
foreground = ${env:POLYBAR_BACKGROUND_LIGHT}

; margins around modules
padding-left = 0
padding-right = 0
module-margin = 0

; borders
line-size = 5

; fonts
font-0 = Anonymice Nerd Font Mono:size=10;2.5
font-1 = MesloLGSDZ Nerd Font:size=13;3
font-2 = MesloLGSDZ Nerd Font:size=19;4
font-3 = ProFontWindows Nerd Font:size=10;3

; modules
modules-left = i3
modules-center = spotify
modules-right = updates wlan cpu memory xbacklight volume battery time

; tray
/* tray-position = right */
/* tray-maxsize = 16 */
/* tray-padding = 2 */
/* tray-background = ${env:POLYBAR_BACKGROUND} */

/* }}} */

/* {{{ module/xwindow */
[module/xwindow]
type = internal/xwindow
label = %title%

/* }}} */

/* {{{ module/xkeyboard */
[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

/* }}} */

/* {{{ module/filesystem */
[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

/* }}} */

/* {{{ module/bspwm */
[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${env:POLYBAR_BACKGROUND_LIGHT}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${env:POLYBAR_COLOR1}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${env:POLYBAR_BACKGROUND}
label-empty-padding = 2

/* }}} */

/* {{{ module/i3 */
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = ${env:POLYBAR_BACKGROUND}
label-mode-background = ${env:POLYBAR_COLOR3_LIGHT}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-foreground = ${env:POLYBAR_FOREGROUND}
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${env:POLYBAR_FOREGROUND}
label-unfocused-background = ${env:POLYBAR_BACKGROUND}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

/* }}} */

/* {{{ module/mpd */
[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

/* }}} */

/* {{{ module/xbacklight */
[module/xbacklight]
type = internal/xbacklight
enable-scroll = false
format = ${env:POLYBAR_XBK:check}
format-underline = ${env:POLYBAR_BACKGROUND}
format-overline = ${env:POLYBAR_BACKGROUND}

ramp-0 = 
ramp-1 = 
ramp-2 = 

/* }}} */

/* {{{ module/backlight-acpi */
[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

/* }}} */

/* {{{ module/cpu */
[module/cpu]
type = internal/cpu
