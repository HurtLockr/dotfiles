/* {{{ module/spotify */
[module/spotify]
type = custom/script
exec = ~/.config/polybar/scripts/spotify_song
exec-if = pgrep -x spotify
tail = false
interval = 1

format = <label>
label = "  %output%  "
label-background = ${env:POLYBAR_SHADE4}
label-foreground = ${env:POLYBAR_FONT_LIGHT}

padding = 0

/* }}} */

