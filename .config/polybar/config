/* {{{ bar/top */
[bar/top]
; dimensions for the bar
width = 1920
height = 30

; specify the monitor to use
monitor = "eDP1"

; center
fixed-center = true

; offset
offset-x = 0
offset-y = 0

; corners
radius = 0

; location
override-redirect = false

; background and foreground
background = ${env:POLYBAR_BACKGROUND}
foreground = ${env:POLYBAR_FOREGROUND}

; margins around modules
padding-left = 0
padding-right = 0
module-margin = 0
/* separator = %{T2}%{T-} */

; fonts
/* font-0 = Cousine for Powerline:size=7.75;2.5 */
/* font-1 = MesloLGSDZ Nerd Font:size=8;2.5 */
font-0 = VictorMono Nerd Font Mono:size=10.5;3.25
font-1 = MesloLGSDZ Nerd Font:size=10;2.5
font-2 = MesloLGSDZ Nerd Font:size=13;3
font-3 = MesloLGSDZ Nerd Font:size=18;4

; modules
modules-left = rofi time date spotify
modules-center = i3
/* modules-center =  */
modules-right = wlan cpu memory xbacklight volume battery

; tray
/* tray-position = right */
/* tray-maxsize = 16 */
/* tray-padding = 2 */
/* tray-background = ${env:POLYBAR_BACKGROUND} */

; line
line-size = 2

' inter-process messaging
enable-ipc = true

/* }}} */

