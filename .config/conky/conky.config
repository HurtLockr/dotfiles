conky.config = {
    alignment = 'top_right',
    background = true,
    border_inner_margin = 20,
    color0 = '000000',
    color1 = 'ec3a37',
    color2 = '75e44c',
    color3 = 'fad000',
    color4 = '6943ff',
    color5 = 'ff2c70',
    color6 = '80fcff',
    color7 = 'ffffff',
    color8 = 'bbbbbb',
    cpu_avg_samples = 2,
    default_color = 'FFFFFF',
    double_buffer = true,
    font = 'Monofur Nerd Font Mono:size=12',
    font1 = 'Go Mono For Powerline:size=11',
    draw_shades = false,
    draw_graph_borders = false,
    gap_x = 0,
    gap_y = 35,
    minimum_width = 220,
    maximum_width = 220,
    no_buffers = true,
    own_window = true,
    own_window_type = 'override',
    own_window_argb_visual = true,
    own_window_argb_value = 120,
    own_window_colour = '000000',
    own_window_title = 'conky1',
    update_interval = 1.0,
    use_xft = true,
}
conky.text = [[
${voffset 2}${color6}${alignc 100}${font Inconsolata Nerd Font Mono:size=70}$font$color
${voffset -70}${alignr 25}${font Monofur Nerd Font:size=30}${color7}${time %I:%M}${font Monofur Ned Font:size=14} ${time %p}$font$color
${alignr 25}${color8}${voffset 2}${font Monofur Nerd Font:size=15}${execi 60 date +"%A %b %d" | awk '{print tolower($0)}'}$font$color

${voffset 6}${color5}Hostname$color ${goto 110}$nodename
${color5}Kernel$color ${goto 110}$kernel
${color5}Uptime$color ${goto 110}$uptime

#${voffset 6}${font DroidSansMono:size=10}${color7}${alignc}${time %A}${font}$voffset
#${voffset -4}${font DroidSansFallback:bold:size=26}${if_match ${time %e}<=9}${color5}${alignc}${time %e}${font}${else}${if_match ${time %e}>=10}${color5}${alignc}${time %e}${endif}${endif}${font}
#${voffset 2}${font DroidSansMono:size=10}${color7}${alignc}${time %B}${font}
#${voffset 0}${font DroidSansMono:size=10}${color7}${alignc}${time %Y}${font}
#${voffset -105}${font Cut Outs for 3D FX:size=90}${color7}${alignc 50}2${font}$color









${font1}${color1}CPU$color$font ${goto 130}$cpu% ${goto 175} ${font1}${color1}RAM$color$font $alignr$memperc%
${color}${cpugraph cpu1 50,140 FF0000 FFA500} ${goto 185}${memgraph 50,130 FF0000 FFA500}

${font1}${color1}Processes$color$font
${color3}${goto 150}pid${goto 220}cpu${goto 280}mem$color
${top name 1} ${goto 140}${top pid 1}${goto 200}${top cpu 1}${goto 260}${top mem 1}
${top name 2} ${goto 140}${top pid 2}${goto 200}${top cpu 2}${goto 260}${top mem 2}
${top name 3} ${goto 140}${top pid 3}${goto 200}${top cpu 3}${goto 260}${top mem 3}
${top name 4} ${goto 140}${top pid 4}${goto 200}${top cpu 4}${goto 260}${top mem 4}

${font1}${color1}Filesystems $color$font

${goto 20}/ ${goto 170}${color2}${fs_bar 5 /} $color
$alignr ${fs_used /} / ${fs_size /}

${goto 20}/home ${goto 170}${color2}${fs_bar 5 /home} $color
$alignr ${fs_used /home} / ${fs_size /home}
${if_mounted /media/Alpaca}
${goto 20}/media/Alpaca ${goto 170}${color2}${fs_bar 5 /media/Alpaca} $color
$alignr ${fs_used /media/Alpaca} / ${fs_size /media/Alpaca}
$endif ${if_mounted /media/Alpaca2}
${goto 20}/media/Alpaca2 ${goto 170}${color2}${fs_bar 5 /media/Alpaca2} $color
$alignr ${fs_used /media/Alpaca2} / ${fs_size /media/Alpaca2}
$endif
${font1}${color1}Wifi$font$color ${alignr 20}${color3}${if_up wlp58s0}${wireless_essid wlp58s0}$color$endif

${color5} ${downspeedf wlp58s0} kbps ${alignr 5}${color6} ${upspeedf wlp58s0} kbps $color
${downspeedgraph wlp58s0 50,150} ${goto 165}${downspeedgraph wlp58s0 50,150}
Local IP${alignr 10}${color2}${addr wlp58s0}$color
${if_match "${exec internet_status}" == "Connected"}Public IP ${alignr 10}${color2}${exec curl ifconfig.me}$color$endif


























]]
