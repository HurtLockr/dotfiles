conky.text = [[

${voffset 3}${alignr 5}${font Monofur Nerd Font:size=44}${color7}${time %l:%M}${font Monofur Ned Font:size=14}  ${time %p}$font$color
${voffset 5}${alignr 5}${color8}${voffset 2}${font Monofur Nerd Font:size=14}${execi 60 date +"%A %B %d" | awk '{print tolower($0)}'}$font$color
${voffset 16}${color5}Hostname$color ${goto 110}$nodename
${color5}Kernel$color ${goto 110}$kernel
${color5}Uptime$color ${goto 110}$uptime





















































]]
