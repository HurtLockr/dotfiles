#!/bin/bash

today=$(date +%d%m%y)
fname=arch_$today

mkdir -p /media/Alpaca2/Dell\ XPS\ Backups/Mallard\ Backups/Linux/$fname

# the n option is for a dry-run
sudo rsync -aAXv \
--exclude={"/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/home/lost+found"} \
/ /media/Alpaca2/Dell\ XPS\ Backups/Mallard\ Backups/Linux/$fname/
