#!/bin/bash

today=$(date +%d%m%y)
fname=arch_$today

echo $fname

if [ ! -d "/media/Alpaca2/Dell\ XPS\ Backups/Mallard\ Backups/Linux/$fname" \
 ]; then
    mkdir /media/Alpaca2/Dell\ XPS\ Backups/Mallard\ Backups/Linux/$fname
fi

# the n option is for a dry-run
sudo rsync -aAXvn \
--exclude={"/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/home/lost+found"} \
/ /media/Alpaca2/Dell\ XPS\ Backups/Mallard\ Backups/Linux/$fname/
