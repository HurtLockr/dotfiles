#!/bin/bash

# time_color=ffffffbb
time_color=$(appres foo | grep foreground: | awk '{print $NF}')bb

# check if the lockscreen file exists. if not, then create it.
if [[ ! -f ~/.config/i3/lock.png ]]; then
    # create the lockscreen file
    cp ~/.config/i3/wall.png ~/.config/i3/lock.png
fi

i3lock -e --force-clock -i ~/.config/i3/lock.png --insidevercolor=ffffff00 \
--insidewrongcolor=ffffff00 --insidecolor=ffffff00 --ringvercolor=ffffff00 \
--ringwrongcolor=f44e42aa --ringcolor=ffffff00 --line-uses-ring --keyhlcolor=ffffffaa \
--bshlcolor=ffffff44 --separatorcolor=ffffffaa --indpos="0.15*w:0.85*h" \
--timecolor=$time_color --timestr="%l:%M %p" --timepos="0.8*w:0.18*h" \
--datecolor=$time_color --datestr="%a, %B %d, %Y" --time-font=sans-serif \
--date-font=sans-serif --timesize=54 --datepos="0.8*w:0.24*h" --datesize=34 \
--veriftext="" --wrongtext="" --noinputtext="" --radius=30 --ring-width=10 \
--indicator
