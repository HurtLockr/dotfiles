export POLYBAR_FOREGROUND=#ffffff
export POLYBAR_BACKGROUND=#1f1f1f
export POLYBAR_FONT_DARK=#0f0f0f
export POLYBAR_FONT_LIGHT=#ffffff
export POLYBAR_SHADE1=#E65100
export POLYBAR_SHADE2=#EF6C00
export POLYBAR_SHADE3=#F57C00
export POLYBAR_SHADE4=#FB8C00
export POLYBAR_SHADE5=#FF9800
export POLYBAR_SHADE6=#FFA726
export POLYBAR_SHADE7=#FFB74D
export POLYBAR_SHADE8=#FFCC80

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do sleep 2; done

# check if multimonitor
if [[ $1 -eq "multi" ]]
then 
    polybar -r top2 &
fi

# Launch bar
polybar -r top &
