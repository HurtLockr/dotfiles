# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do sleep 2; done

# check if multimonitor
if [[ $1 -eq "multi" ]]
then 
    polybar -r top2 &
fi

# Launch bar
polybar -r top &
