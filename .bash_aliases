# some secrets
source ~/.bash_secrets

# yay aliases
alias ys="yay -S"
alias yrs="yay -Rs"
alias yay="yay && polybar-msg cmd restart"

# sudo vim alias
alias svim="sudoedit"

# alias for ls
alias ls="ls --color=auto"
alias lsa="ls -Ahpls"

# ranger
alias ran='ranger'

# directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias cdc="cd ~/documents/Courses"

# visualboy
alias vba="visualboyadvance-m"

# check updates
alias cu="check_updates"
alias cul="check_updates -l"

# mounted drives
alias Alpaca="cd /media/Alpaca"
alias Alpaca2="cd /media/Alpaca2"
alias Win="cd /media/Win"
